        <form action="/admin/doctor/create" method="POST">
            <input type="hidden" name="csrf_token"  value="{{csrf_token('authenticate')}}">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputNome">* NOME</label>
                    <input type="text" name="nome" class="form-control" id="inputNome" placeholder="NOME" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword">* NOVA SENHA </label>
                    <input type="password" name="passwd" class="form-control" id="inputPassword" placeholder="SENHA" required>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputRG">* RG</label>
                    <input type="text" name="rg" class="form-control" id="inputRG" placeholder="RG" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputconfirmPasswd">* CONFIRME SENHA </label>
                    <input type="password" name="confirmPasswd" class="form-control" id="inputconfirmPasswd" placeholder="password" required>
                </div>
            </div> 

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCelular">* CELULAR </label>
                    <input type="text" name="phone1" class="form-control" id="inputCelular" placeholder="(41)99999 9999" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputTELEFONE">* TELEFONE <small style="color:blue"> (opcional) </small> </label>
                    <input type="text" name="TELEFONE" class="form-control" id="inputTELEFONE" placeholder="(41)3333 6666">
                </div>
            </div> 

            <div class="form-row">                    
                <div class="form-group col-md-6">
                    <label for="inputCRM">* CRM </label>
                    <input type="text" name="crm" class="form-control" id="inputCRM" placeholder="CRM" required >
                </div>
                <div class="form-group col-md-6">
                    <label for="inputCPf">* CPF </label>
                    <input type="text" maxlength='11' name="cpf" class="form-control" id="inputCPf" placeholder="CPF" required>
                </div>                   
            </div>                                
            <br>    
            <button type="submit" class="btn btn-primary"> <i class="fas fa-paper-plane"></i> Cadastrar </button>
            <br> <br>
        </form>
