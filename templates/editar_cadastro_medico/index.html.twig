{% extends 'base.html.twig' %}

{% block title %}Hello EditarCadastroMedicoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {   margin-top: -1px; width: 100%; height:auto;}
    .example-wrapper code { background: white; padding: 2px 6px; }
</style>


<div class="mb-3" style="float:right; text-align:center; margin-right:20px; ">
    <i style="font-size: 18px;" class="far fa-user-circle"></i> <br>
    <span style="color:cian; font-size:12px;"> Você esta logado: <strong style="color:blue;">  ✅ </strong>  </span> 
    <br>
    <div style="width:100%; height:auto;"> <a href="/admin/management" style=" "> <u> Home </u> </a > </div>
</div>

<div class="example-wrapper" style="background:white; height: 90px;" >
    <div style=" width:8%; height:auto; padding-top:8px;  margin-left:25px; " align="center">
        <img style=" " src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/bc/Logo_PMPR_2.svg/800px-Logo_PMPR_2.svg.png" alt="Smiley face" height="70" width="60">
    </div>
</div>
 

<span style="margin-left:15px; font-size:11.5px;"> <i class="far fa-circle"></i> Se Status é 1 está <strong> ativo. </strong> </span>
<br>
<span style="margin-left:15px; font-size:11.5px;"> <i style="color:red;" class="far fa-circle"></i> Se Status é 0 está  <strong> inativo  </strong> </span>

{# <span style=" margin:0 auto; margin-left: 20px;"> Edição de cadastro.   </span> <br> <br> #}
<table class="table table-striped">
  <thead>
    <tr align="center">
      <th scope="col" style="color:#4f6472;">ID</th>
      <th scope="col" style="color:#4f6472;">NOME</th>
      <th scope="col" style="color:#4f6472;">CPF</th>
      <th scope="col" style="color:#4f6472;">RG</th>
      <th scope="col" style="color:#4f6472;">CRM</th>
      <th scope="col" style="color:#4f6472;">PHONE</th>
      <th scope="col" style="color:#4f6472;">PHONE2</th>
      <th scope="col" style="color:#4f6472;">CRM</th>
      <th scope="col" style="color:#4f6472;">STATUS</th>
      <th scope="col" style="color:#4f6472;">editar | desativar</th>
    </tr>
  </thead>

  <tbody align="center">
    {% if findAll is defined and findAll|length > 0 %}
      {% for alls in findAll %}
      <tr>
        <th scope="row"> {{alls.ID}} </th>
        <td>{{alls.NOME}}   </td>
        <td>{{alls.CPF}}    </td>
        <td>{{alls.RG}}     </td>
        <td>{{alls.CRM}}    </td>
        <td>{{alls.phone1}} </td>
        <td>{{alls.phone2}} </td>
        <td>{{alls.CRM}}    </td>
        <td>
          {% if alls.ativo == false %}
            <span> 0 </span>
            {% else %}
            {{alls.ativo}}
          {% endif %}
        </td>
        <td> 
          <a href="/admin/cadastro/edit/user?user={{alls.ID}}" class="btn btn-outline-warning"> <i class="far fa-edit"></i> </a> 
          <a href="/admin/disableDoctor?desability={{alls.ID}}" class="btn btn-outline-danger"> <i style="color:darkgray" class="fas fa-user-slash"></i> </a> 
        </td>
      </tr>
      {% endfor %}
      {% else %}
        <h5 style="color:gray; margin-left:25px; position:relative; top:110px;"> Não há registro no momento ! <h5>
    {% endif %}
  </tbody>
</table>

<hr>

<section style="width:100%; height:auto;">
    <div style="width:100%; height:70px; background:white; position:absolute; bottom:0px; "> 
        <div style=" display:inline-block; width:8%; height:auto;  padding-top: 6px; margin-left:25px; " align="center">
            <img style=" " src="https://www.pikpng.com/pngl/m/204-2047354_doctor-icon-medicina-png-animado-clipart.png" alt="Smiley face" height="54" width="50">
        </div>
        <div align="center" style="width:110px; height:auto; padding-top:8px; float:right; margin-right: 40px; display:inline-block;">
            <i style="font-size: 15px; color:#afafaf; " class="fas fa-unlock-alt"></i> <br>
            <a  href="#" style="color:#034F84; font-size:12px; color:magenta;"> <strong> <u> Alterar senha. </strong> </u> </a>
        </div>

        <div align="center" style="width:110px; height:auto; padding-top:8px; float:right; margin-right: 40px; display:inline-block;">
            <i style="font-size: 15px; color:#afafaf; " class="fas fa-phone-alt"> HPM </i> <br>
            <span  style="color:#034F84; font-size:12px; ">  (41)3333 3333.  </span>
        </div>
    </div>
</section>
{% endblock %}
